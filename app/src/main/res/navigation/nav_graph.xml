<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/exploreFragment">

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.movie.android.presentation.features.details.DetailsFragment"
        android:label="fragment_details" >

        <argument
            android:name="movieId"
            app:argType="integer"
            app:nullable="false" />

        <action
            android:id="@+id/action_detailsFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" >

            <argument
                android:name="movieId"
                app:argType="integer"
                app:nullable="false" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.movie.android.presentation.features.movielist.MovieListFragment"
        android:label="MovieListFragment" >

        <argument
            android:name="listId"
            app:argType="integer"
            app:nullable="false" />

        <action
            android:id="@+id/action_movieListFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" >

            <argument
                android:name="movieId"
                app:argType="integer"
                app:nullable="false" />

        </action>

    </fragment>
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.movie.android.presentation.features.explore.ExploreFragment"
        android:label="ExploreFragment" >
        <action
            android:id="@+id/action_exploreFragment_to_movieListFragment"
            app:destination="@id/movieListFragment">

            <argument
                android:name="listId"
                app:argType="integer"
                app:nullable="false" />

        </action>
        <action
            android:id="@+id/action_exploreFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" >

            <argument
                android:name="movieId"
                app:argType="integer"
                app:nullable="false" />

        </action>
    </fragment>

</navigation>